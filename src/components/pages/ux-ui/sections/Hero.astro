---
import HeroButton from "@components/ui/hero/hero-button.astro";
import HeroContainer from "@components/ui/hero/hero-container.astro";
import HeroParagraph from "@components/ui/hero/hero-paragraph.astro";
import HeroSocialMediaItem from "@components/ui/hero/hero-social-media-item.astro";
import HeroSocialMedia from "@components/ui/hero/hero-social-media.astro";
import HeroSubtitle from "@components/ui/hero/hero-subtitle.astro";
import HeroTitle from "@components/ui/hero/hero-title.astro";

import { siteConfig, siteConfigUxUi } from "@public/data/site-config";

const { owner, ownerSocialMedia, cvLink, cvTitle } = siteConfig;
const { ownerInfo, ownerOccupation } = siteConfigUxUi;
---

<HeroContainer mode="uxui">
	<HeroTitle mode="uxui">{owner}</HeroTitle>
	<HeroSubtitle mode="uxui" style="view-transition-name:title">{ownerOccupation}</HeroSubtitle>
	<HeroSocialMedia mode="uxui">
		{
			ownerSocialMedia.map(({ icon, name, link }) => (
				<HeroSocialMediaItem mode="uxui" href={link} target="_blank" set:html={icon} title={name} />
			))
		}
	</HeroSocialMedia>
	<HeroParagraph mode="uxui">
		{ownerInfo}
	</HeroParagraph>

	<HeroButton href={cvLink} mode="uxui" target="_blank">{cvTitle}</HeroButton>
</HeroContainer>
