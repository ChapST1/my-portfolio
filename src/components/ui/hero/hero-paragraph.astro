---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "src/lib/utils/cn";
import Paragraph from "../paragraph.astro";

const heroParagraph = cva("heroParagraph", {
	variants: {
		mode: {
			dev: "text-bunker-400",
			uxui: "text-bunker-ux-600",
		},
	},
	compoundVariants: [{ mode: "dev" }],
});

interface Props extends HTMLAttributes<"p">, VariantProps<typeof heroParagraph> {}

const { mode = "dev", ...props } = Astro.props;
---

<Paragraph class={cn(`mt-[52px] text-center`, heroParagraph({ mode }), Astro.props.class)}>
	<slot />
</Paragraph>
