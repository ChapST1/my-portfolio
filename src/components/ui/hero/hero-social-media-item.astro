---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "src/lib/utils/cn";

const heroSocialMediaItem = cva("heroSocialMediaItem", {
	variants: {
		mode: {
			dev: "border-bunker-950 text-bunker-800 hover:text-bunker-100",
			uxui: "border-bunker-ux-300 text-bunker-ux-500 hover:text-bunker-700",
		},
	},
	compoundVariants: [{ mode: "dev" }],
});

interface Props extends HTMLAttributes<"a">, VariantProps<typeof heroSocialMediaItem> {}

const { mode = "dev", ...props } = Astro.props;
---

<a
	class={cn(
		`flex items-center justify-center  duration-300 *:size-5 size-8 rounded border-2`,
		heroSocialMediaItem({ mode }),
		Astro.props.class
	)}
	{...props}
>
	<slot />
</a>
