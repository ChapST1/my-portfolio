---
import "@fontsource-variable/montagu-slab";

import "@fontsource/mukta-vaani/200.css";
import "@fontsource/mukta-vaani/500.css";
import "@fontsource/mukta-vaani/800.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://github.com/chapst1.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="m-auto w-full bg-bunker-ux-100 px-3 py-[30px] md:max-w-screen-lg md:px-3 lg:px-0">
		<slot />
		<style is:global>
			:root {
				color-scheme: light;
			}
			html {
				scroll-behavior: smooth;
				scrollbar-width: thin;
				scrollbar-color: theme("colors.bunker-ux.200") theme("colors.bunker-ux.100");
			}

			body {
				background-image: url("/bg/noise-uxui.png");
				background-repeat: repeat;
				font-family: "Mukta Vaani", sans-serif;
			}
		</style>
	</body>
</html>
